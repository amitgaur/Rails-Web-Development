<% if notice %>
<p id="notice"><%= notice %></p> <% end %>
<p>Product Lists</p>
<p>You have viewed this page <%= pluralize(@counter,"time")%> </p>
<% @products.each do |product| %>
    <div class="entry">
      <%= link_to image_tag(product.image_url),line_items_path(:product_id => product), :method => :post%>
      <h3><%= product.title %></h3>
      <%= sanitize(product.description)%>
      <div class="price_line">
        <span class="price"><%= number_to_currency(product.price) %></span>
        <%= button_to 'Add to Cart', line_items_path(:product_id => product),:method=>:post, :remote=>:true %>
      </div>
    </div>


<% end %>